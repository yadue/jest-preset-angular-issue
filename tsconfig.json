{
  "compileOnSave": false,
  "angularCompilerOptions": {},
  "compilerOptions": {
    "downlevelIteration": true,
    "module": "es2020",
    "moduleResolution": "node",
    "target": "es2018",
    "noImplicitAny": false,
    "sourceMap": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types"],
    "lib": ["es2018", "dom"],
    "baseUrl": "./src",
    "paths": {
      "@projectTypes/*": ["app/types/*"],
      "@interfaces/*": ["app/interfaces/*"],
      "@modules/*": ["app/modules/*"],
      "@libs/*": ["app/libs/*"],
      "@i18n/*": ["i18n/*"]
    },
    "skipLibCheck": true,
    "rootDir": ".",
    "outDir": "./dist/out-tsc"
  }
}
